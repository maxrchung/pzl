{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch server",
      "runtimeExecutable": "nx",
      "runtimeArgs": ["serve", "server"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch client",
      "runtimeExecutable": "nx",
      "runtimeArgs": ["serve", "client"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true
    },
    {
      "name": "Attach to client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/apps/client/src",
      "runtimeArgs": ["http://localhost:4200"]
    }
  ],
  "compounds": [
    {
      "name": "Debug all",
      "configurations": ["Launch server", "Launch client", "Attach to client"],
      "stopAll": true
    }
  ]
}
